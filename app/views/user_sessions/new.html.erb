<div class="left-column">
<h2>Login</h2>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <div class="span-4 form-label">
  <%= f.label :login %>
  </div>
  <div class="span-18">
  <%= f.text_field :login, :size => 20 %>
  </div>
  <div class="span-4 form-label">
  <%= f.label :password %>
  </div>
  <div class="span-18">
  <%= f.password_field :password, :size => 10 %>
</div>
<div class="span-4 form-label">
  <%= f.label :remember_me %></div>
  <div class="span-18"><%= f.check_box :remember_me %>
</div>
<div class="span-4 form-label">
  <%= f.submit "Login" %>
  </div>
<% end %>

<div class="span-22" style="margin-bottom:15px;"><%= link_to 'Forgot password?', new_password_reset_path %></div>
</div>
